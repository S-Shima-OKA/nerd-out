---
import ArticleCard from '../components/ArticleCard.astro';
const allPosts = await Astro.glob('../pages/posts/*.md');
---
<!-- Card Blog -->
<div class="px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
<!-- Grid -->
    <section class="grid lg:grid-cols-2 lg:gap-y-16 gap-10">
        {
            allPosts.map((post) => {
                return (
                    <ArticleCard 
                    postTitle={post.frontmatter.title}
                    postDate={post.frontmatter.pubDate}
                    postDesc={post.frontmatter.description}
                    postUrl={post.url}
                    postImage={
                        post.frontmatter.heroImage === '' ? '/public/assets/dummy.jpg' : post.frontmatter.heroImage
                    }
                    />
                )
            })
        }
    </section>
<!-- End Grid -->
</div>
<!-- End Card Blog -->