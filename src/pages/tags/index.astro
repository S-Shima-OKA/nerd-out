---
import Layout from '../../layouts/Layout.astro';
import PageTitle from '../../components/PageTitle.astro';
const allPosts = await Astro.glob('../posts/*.md');
const tags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---
<Layout>
	<PageTitle title="TagIndex" lead=タグ一覧 />
	<ul class="flex justify-center flex-wrap items-center gap-3 mt-8 md:max-w-[30rem] mx-auto">
		{
			tags.map((tag) => {
				return(
					<li>
						<a class="block py-1.5 px-3 rounded-md text-sm md:text-normal font-medium bg-gray-800 text-white dark:bg-white dark:text-neutral-800"
						 href={`/tags/${tag}`}>{tag.charAt(0).toUpperCase() + tag.slice(1).toLowerCase()}</a>
					</li>
				)
			})
		}
	</ul>
</Layout>
